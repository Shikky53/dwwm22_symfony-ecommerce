{% extends 'base.html.twig' %}

{% block title %}Hello CustomerProductController!{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <h3 class="text-center">
                {{ category.name | upper }}
            </h3>
        </div>
            {% for product in category.products %}
            <div class="col-4 mt-2">
                <div class="card">
                    <div class="card-header">
                        <h5>{{ product.name | upper }}</h5>
                    </div>
                    <div class="card-body">
                        <img src="{{ product.image }}" alt="" class="w-100 imageCard">
                    </div>
                    <div class="card-footer">
                        <p>Prix : {{ product.price | priceFormatEuro }}</p>
                        <p>Cat√©gorie : {{ product.category.name }}</p>
                    </div>
                    <div class="card-footer">
                        <a href="#" class="btn btn-info w-100">Consulter</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}