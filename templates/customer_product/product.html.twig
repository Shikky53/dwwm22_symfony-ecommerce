{% extends "base.html.twig" %}

{% block body %}
<div class="container py-5">

    <div class="row">
        <div class="col-6">
            <div class="card">
                <img src="{{ product.image }}" alt="produit" class="imageProductDetail">
            </div>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    <h3>{{ product.name | upper }}</h3>
                </div>
                <div class="card-body">
                    <p>Prix : {{ product.price | priceFormatEuro }} </p>
                    <p>Cat√©gorie : {{ product.category.name }} </p>
                </div>
                <div class="card-footer">
                    <a href="#" class="btn btn-primary w-100">Ajouter au panier</a>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}